<service name="StandardGroupCreator" version="1.0" type="caseoption">
  <description>Service StandardGroupCreator</description>
  <interface name="IGroupCreator" />

  <!-- Eviter l'utilisation de variable gloable dans un service -->
  <variables>
  </variables>

  <options>

    <simple name="scalar-eval" type="bool" minOccurs="1" maxOccurs="1" default="false">
      <description>Use Scalar Expression Evaluation</description>
    </simple>

    <simple name="filter-face-tolerance" type="real" minOccurs="1" maxOccurs="1" default="1.e-20">
      <description>Tolerance to Smooth Filter </description>
    </simple>

    <simple name="filter-cell-tolerance" type="real" minOccurs="1" maxOccurs="1" default="1.e-20">
      <description>Tolerance to Smooth Filter </description>
    </simple>

    <simple name="verbose" type="bool" default="false">
      <description>verbose mode</description>
    </simple>   

    <simple name="group-output-directory" type="string" default="">
      <description>
        Output directory for group creation post-processing.
        This directory is relative to default main output directory.
        The output variables are named using the associated group name and values are 1 only on items of the group.
      </description>
    </simple>
    
    <service-instance name    = "group-output-format"
                      type    = "Arcane::IPostProcessorWriter"
                      default = "Ensight7PostProcessor" >
      <description>
        Describe post-processor for group output post-processing
      </description>
    </service-instance>

    <!-- cell group options -->
    <complex name="cellgroup" type="cellgroup" minOccurs="0" maxOccurs="unbounded">

      <simple name="name" type="string" minOccurs="1" maxOccurs="1">
        <description>Group name</description>
      </simple>

      <simple name="area" type="string" minOccurs="1" maxOccurs="unbounded">
        <description>Area where to search the cells</description>
      </simple>

      <simple name="filter" type="string" minOccurs="1" maxOccurs="1">
        <description>Expression</description>
      </simple>

      <simple name="filter-test" type="bool" default="true">
        <description>filter logical test to add element</description>
      </simple>
    </complex>

    <!-- face group options -->
    <complex name="facegroup" type="facegroup" minOccurs="0" maxOccurs="unbounded">

      <simple name="name" type="string">
        <description>Group name</description>
      </simple>

      <simple name="area" type="string" minOccurs="1" maxOccurs="unbounded">
        <description>Area where to search the faces</description>
      </simple>

      <simple name="normal-eval" type="bool" default="false">
        <description>Use face normal to create face group</description>
      </simple>
      
      <simple name="teta" type="real" default="0.">
        <description>first spheric coordinate of filter direction dir=(teta,phi)</description>
      </simple>
      
      <simple name="phi" type="real" default="0.">
        <description>second spheric coordinate of filter direction dir=(teta,phi)</description>
      </simple>
      
      <simple name="tol" type="real" default="0.">
        <description>real tolerance to use for direction filter</description>
      </simple>
      
      <simple name="filter" type="string" minOccurs="1" maxOccurs="1" default="1." >
        <description>Expression</description>
      </simple>
      
      <simple name="filter-test" type="bool" default="true">
        <description>filter logical test to add element</description>
      </simple>
      
    </complex>    
    
  </options>
</service>
