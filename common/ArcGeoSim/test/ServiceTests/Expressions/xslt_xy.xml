<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet version="1.0"
                xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <xsl:output method="xml" omit-xml-declaration="no" version="1.1" encoding="utf-16"  indent="yes"/>

    <!-- this tokenize transpose dimX x dimY data to dimY x dimX data -->
    <xsl:template name="tokenize-transpose">
        <xsl:param name="pText"/>
        <xsl:param name="dimX"/>
        <xsl:param name="dimY"/>
        <xsl:param name="i"/>
        <xsl:param name="begin"/>
        <xsl:param name="end"/>
        <xsl:call-template name="tokenize-inner">
            <xsl:with-param name="pText" select="$pText"/>
            <xsl:with-param name="index" select="0"/>
            <xsl:with-param name="dimX" select="$dimX" />
            <xsl:with-param name="dimY" select="$dimY" />
            <xsl:with-param name="begin" select="$begin + $i"/>
            <xsl:with-param name="end" select="$end"/>
        </xsl:call-template>
        <xsl:if test="$i + 1 &lt; $dimX">
            <xsl:call-template name="tokenize-transpose">
                <xsl:with-param name="pText" select="$pText"/>
                <xsl:with-param name="dimX" select="$dimX" />
                <xsl:with-param name="dimY" select="$dimY" />
                <xsl:with-param name="i" select="$i + 1" />
                <xsl:with-param name="begin" select="$begin" />
                <xsl:with-param name="end" select="$end" />
            </xsl:call-template>
        </xsl:if>
    </xsl:template>

    <xsl:template name="tokenize-inner">
        <xsl:param name="pText"/>
        <xsl:param name="index"/>
        <xsl:param name="dimX"/>
        <xsl:param name="dimY"/>
        <xsl:param name="begin"/>
        <xsl:param name="end"/>
        <xsl:if test="string-length($pText)">
            <xsl:if test="$index &gt;= $begin and $index &lt; $end and ($index - $begin) mod $dimX = 0">
                <xsl:if test="contains($pText, ' ')">
                    <xsl:value-of select="substring-before($pText, ' ')"/><xsl:text> </xsl:text>
                </xsl:if>
                <xsl:if test="not(contains($pText, ' '))">
                    <xsl:value-of select="$pText"/><xsl:text> </xsl:text>
                </xsl:if>
            </xsl:if>
            <xsl:call-template name="tokenize-inner">
                <xsl:with-param name="pText" select="substring-after($pText, ' ')"/>
                <xsl:with-param name="index" select="$index + 1"/>
                <xsl:with-param name="dimX" select="$dimX" />
                <xsl:with-param name="dimY" select="$dimY" />
                <xsl:with-param name="begin" select="$begin"/>
                <xsl:with-param name="end" select="$end"/>
            </xsl:call-template>
        </xsl:if>
    </xsl:template>


<xsl:template match="/"  xml:space="preserve">

<xsl:variable name="seqX" select="normalize-space(RegularGrid/x-value)"/>

<xsl:variable name="dimX"  select="string-length($seqX) - string-length(translate($seqX, ' ', ''))+1"/>

<xsl:variable name="seqY" select="normalize-space(RegularGrid/y-value)"/>

<xsl:variable name="dimY"  select="string-length($seqY) - string-length(translate($seqY, ' ', ''))+1"/>

<xsl:variable name="text" select="normalize-space(RegularGrid/property-value)"/>


<Xdmf Version="2.0">
    <Domain>
        <Grid>
            <Topology TopologyType="2DRectMesh" Dimensions="{$dimX} {$dimY}"/>
            <Geometry Type="VXVY">
                <!-- VX -->
                <DataItem Format="XML" Dimensions="{$dimX}">
<xsl:value-of select='$seqX'/>
                </DataItem>
                <!-- VY -->
                <DataItem Format="XML" Dimensions="{$dimY}">
<xsl:value-of select='$seqY'/>
                </DataItem>
            </Geometry>
            <Attribute Name="User Defined Name" Center="Node">
                <DataItem Format="XML" Dimensions="{$dimX} {$dimY}">
<xsl:call-template name="tokenize-transpose">
    <xsl:with-param name="pText" select="$text"/>
    <xsl:with-param name="dimX" select="$dimX" />
    <xsl:with-param name="dimY" select="$dimY" />
    <xsl:with-param name="i" select="0" />
    <xsl:with-param name="begin" select="0" />
    <xsl:with-param name="end" select="$dimX * $dimY" />
</xsl:call-template>
                </DataItem>
            </Attribute>
        </Grid>
    </Domain>
</Xdmf>

</xsl:template>

</xsl:stylesheet>
